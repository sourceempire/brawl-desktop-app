{
  "name": "desktop-app",
  "version": "0.1.0",
  "repository": "https://github.com/sourceempire/desktop-app-releases",
  "description": "Desktop App",
  "author": "Source Empire AB <info@sourceempire.io>",
  "build": {
    "appId": "io.sourceempire.desktop-app"
  },
  "private": true,
  "main": "public/electron-.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^7.1.0",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.25",
    "cross-env": "^7.0.3",
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "react-scripts": "^5.0.1",
    "versiony": "^2.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --linux --win --mac --x64 --ia32 --publish never",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "increment-version": "versiony package.json --patch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
