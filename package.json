{
  "name": "desktop-app",
  "version": "0.1.0",
  "description": "Desktop App",
  "author": "Source Empire AB <info@sourceempire.io>",
  "repository": "https://github.com/sourceempire/desktop-app-releases",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run start-react & npm run start-electron-delay",
    "start-react": "vite",
    "start-electron": "electron .",
    "start-electron-delay": "sleep 3 && npm run start-electron",
    "react-build": "react-scripts build",
    "electron-build": "electron-builder",
    "build": "tsc && vite build && npm run electron-build",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:windows": "npm run build && electron-builder --win --publish always",
    "increment-version-patch": "npm version patch",
    "increment-version-minor": "npm version minor",
    "increment-version-major": "npm version major",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "brawl-fetch": "github:sourceempire/brawl-fetch#v1.3.2",
    "brawl-image": "github:sourceempire/brawl-image#v1.0.6",
    "brawl-websocket": "github:sourceempire/brawl-websocket#v1.0.3",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.4",
    "lottie-web": "^5.12.2",
    "react": "^18.2.0",
    "react-cropper": "^2.3.3",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.14.1",
    "react-slider": "^2.0.6",
    "react-transition-group": "^4.4.5",
    "uuid": "^9.0.1",
    "vite-plugin-svgr": "^4.1.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.11.0",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@types/react-slider": "^1.3.1",
    "@types/react-transition-group": "^4.4.6",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.1.0",
    "cross-env": "^7.0.3",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "^3.0.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-mkcert": "^1.16.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}